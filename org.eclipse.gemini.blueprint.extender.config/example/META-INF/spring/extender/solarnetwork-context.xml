<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-4.2.xsd">
	
	<bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="1"/>
		<property name="maxPoolSize" value="5"/>
		<property name="keepAliveSeconds" value="60"/>
	</bean>

	<bean id="applicationContextCreator" class="net.solarnetwork.spring.osgi.NonValidatingOsgiApplicationContextCreator"/>

	<util:properties id="extenderProperties">
		<prop key="dependencies.wait.time">600000</prop><!-- Default 5m -->
		<prop key="shutdown.wait.time">10000</prop><!-- Default 10s -->
	</util:properties>

</beans>
